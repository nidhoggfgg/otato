{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true
  },
  "include": [
    "src",
    "l2d/**/*.ts",
    "l2d/**/*.d.ts"
  ]
}
